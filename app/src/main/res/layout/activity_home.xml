<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

   <android.support.design.widget.NavigationView
       android:id="@+id/navigation_view"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:background="#fff"
       app:itemTextColor="@color/darkGray"
       app:itemIconTint="@color/darkGray"
       app:menu="@menu/menu_drawer"
       android:layout_gravity="start"
       >
   </android.support.design.widget.NavigationView>

   <LinearLayout
       android:id="@+id/backgroundMainHome"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:background="#fff"
       android:gravity="center"
       android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="1dp"
       android:layout_weight="1">

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/create_card_2"
             />
         <TextView
             android:textColor="@color/fontmedium"
             android:id="@+id/textViewCreateCard"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/font_size_small"
             android:text="طلب اصدار بطاقة مصرفية"
             />

      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/reset_password_3"
             />
         <TextView
             android:id="@+id/textViewResetPassword"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:textColor="@color/fontmedium"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/font_size_small"
             android:text="اعادة تعيين كلمة السر للبطاقة"
             />


      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/update_data"
             />
         <TextView
             android:id="@+id/textViewReprocessData"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/font_size_small"
             android:text="اعادة تجهيز بيانات البطاقة"
             android:textColor="@color/fontmedium"

             />


      </LinearLayout>

   </LinearLayout>










   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="1dp"
       android:layout_weight="1">

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/bank_data_update"
             />
         <TextView
             android:id="@+id/textViewBankDataUpdate"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/font_size_small"
             android:textColor="@color/fontmedium"
             android:text="تحديث بيانات المتدرب لدى البنك"
             />

      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/moving_data"
             />
         <TextView
             android:id="@+id/textViewMovingDate"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:textColor="@color/fontmedium"
             android:gravity="center"
             android:textSize="@dimen/font_size_small"
             android:text="نقل بيانات المتدرب الى الوحدة"
             />


      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/activate_card"
             />
         <TextView
             android:id="@+id/textViewActivateCard"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/fontmedium"
             android:textSize="@dimen/font_size_small"
             android:text="طلب تنشيط بطاقة"
             />


      </LinearLayout>

   </LinearLayout>










   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="1dp"
       android:layout_weight="1">

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="2"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">



      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="2"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="3"
             android:gravity="center"
             android:src="@drawable/recreate_card_2"
             />
         <TextView
             android:id="@+id/textViewRecreateCard"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/fontmedium"
             android:textSize="@dimen/font_size_small"
             android:text="طلب اعادة اصدار بطاقة مصرفية"
             />


      </LinearLayout>



      <LinearLayout
          android:layout_width="1dp"
          android:layout_weight="2"
          android:orientation="vertical"
          android:padding="8dp"
          android:layout_height="match_parent">



      </LinearLayout>

   </LinearLayout>
</LinearLayout>
</android.support.v4.widget.DrawerLayout>