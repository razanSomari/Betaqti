<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfile">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@color/darkerGray">



        <Button
            android:gravity="bottom"
            android:background="@drawable/round_button_up"
            android:layout_width="match_parent"
            android:layout_height="70dp"></Button>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:gravity="right"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_weight="12">


        <!-- layout 1-->
        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="16dp"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/student_name"
                android:gravity="right"
                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/fontDark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                />

            <TextView
                android:gravity="right"

                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/student_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorAccentDark"/>

            <TextView
                android:gravity="right"

                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/fontDark"
                android:id="@+id/student_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />



            <TextView
                android:gravity="right"

                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorAccentDark"
                android:id="@+id/student_id_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />
            <TextView
                android:gravity="right"

                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/fontDark"
                android:id="@+id/student_id_expiry_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"/>
        </LinearLayout>



        <!-- layout 2-->
        <LinearLayout
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_student_name"
                android:layout_width="fill_parent"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"

                android:textColor="@color/fontDark"

                android:text="اسم المتدربة"/>

            <TextView
                android:id="@+id/textView_student_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorAccentDark"

                android:textSize="@dimen/font_size_medium"
                android:text="الرقم التدريبي"/>

            <TextView
                android:id="@+id/textView_student_email"
                android:layout_width="fill_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/fontDark"
                android:textSize="@dimen/font_size_medium"
                android:text="البريد الالكتروني"/>



            <TextView
                android:id="@+id/textView_student_ID_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="@dimen/font_size_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorAccentDark"
                android:text="نوع بطاقة الهوية"/>
            <TextView
                android:id="@+id/textView_student_ID_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="@dimen/font_size_medium"
                android:textColor="@color/fontDark"
                android:text="تاريخ انتهاء بطاقة الهوية"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


    <ImageView
        android:src="@drawable/circle"
        android:layout_width="149dp"
        android:translationY="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"/>
    <ImageView
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="150dp"
        android:translationY="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"/>

</FrameLayout>