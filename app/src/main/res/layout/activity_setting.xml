<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    android:id="@+id/backgroundMain"
    tools:context=".Setting">

    <TextView
        android:id="@+id/l7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/fontDark"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="العرض"/>
    <LinearLayout
        android:id="@+id/background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button_grey"
        >
        <TextView
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/fontmedium"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:text="خط بحجم كبير"/>
        <TextView
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/fontmedium"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:text="خط بحجم متوسط"/>
        <TextView
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/fontmedium"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:text="خط بحجم صغير"/>
    </LinearLayout>

    <TextView
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/fontDark"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="اعداد حجم الخط"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

            <TextView
                android:id="@+id/l5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/fontmedium"
                android:layout_gravity="right"
                android:paddingRight="8dp"
                android:text="ع"/>


            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content">
            </SeekBar>
        <TextView
            android:id="@+id/l6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/fontmedium"
            android:paddingRight="8dp"
            android:text="ع"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/background1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button_grey"
        >

        <Switch
            android:onClick="clicked"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/l8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/fontmedium"
            android:gravity="right"
            android:layout_marginBottom="8dp"
            android:text="الوضع الداكن"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/retain"
            android:text="إرجاع"
            android:background="@drawable/round_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/colorAccentDark"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/save_setting"
            android:text="حفظ"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_large"
            android:background="@drawable/round_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorAccentDark"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>


</LinearLayout>